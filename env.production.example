# CraveVerse Production Environment Variables Template
# Copy this file to .env.production.local and fill in your production values

# =============================================================================
# SUPABASE CONFIGURATION (PRODUCTION)
# =============================================================================
# Use your production Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key

# =============================================================================
# CLERK AUTHENTICATION (PRODUCTION)
# =============================================================================
# Use your production Clerk application with LIVE keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your-production-publishable-key
CLERK_SECRET_KEY=sk_live_your-production-secret-key

# =============================================================================
# OPENAI CONFIGURATION (PRODUCTION)
# =============================================================================
# Use your production OpenAI API key with proper usage limits
OPENAI_API_KEY=sk-your-production-openai-api-key

# =============================================================================
# STRIPE PAYMENT PROCESSING (PRODUCTION)
# =============================================================================
# Use your production Stripe account with LIVE keys
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# =============================================================================
# POSTHOG ANALYTICS (PRODUCTION)
# =============================================================================
# Use your production PostHog project
NEXT_PUBLIC_POSTHOG_KEY=phc_your-production-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# =============================================================================
# APPLICATION CONFIGURATION (PRODUCTION)
# =============================================================================
# Your production app URL (replace with your actual Vercel domain)
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app

# Node environment
NODE_ENV=production

# =============================================================================
# PRODUCTION SECURITY NOTES
# =============================================================================
# - Never commit this file to version control
# - Use strong, unique keys for production
# - Rotate keys regularly
# - Monitor usage and costs
# - Set up proper monitoring and alerting
# - Use secure key management systems
